#: import Factory kivy.factory.Factory

<NewGame@Popup>
	auto_dismiss: False
	size_hint: .6, .8
	pos_hint: {'x': .2 , 'top': .9}

	title: 'Nowa Gra Planszowa'
	
	GridLayout:
		size: root.width, root.height
		cols: 1
		GridLayout:
			cols: 2
			Label:
				text: 'Nazwa Gry:'
				font_size: 16
			TextInput:
				multiline: False
				fonr_size: 15

			Label:
				text: 'Typ Gry [P/D]:'
				font_size: 16
			TextInput:
				multiline: False
				font_size: 15

			Label:
				text: 'Minimalna ilość graczy:'
				font_size: 16
			TextInput:
				multiline: False
				font_size: 15

			Label:
				text: 'Maksymalna ilość graczy:'
				font_size: 16
			TextInput:
				multiline: False
				font_size: 15

			Label:
				text: 'Czas Gry'
				font_size: 16
			TextInput:
				multiline: False
				font_size: 15

			Label:
				text: 'Właściciel'
				font_size: 16
			TextInput:
				multiline: False
				font_size: 15

		Button:
			size_hint: .5, .5 
			text: 'Zapisz'
			font_size: 16
			on_release: root.dismiss()

