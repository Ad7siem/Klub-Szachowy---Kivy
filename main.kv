<DeleteGame@Popup>
	auto_dismiss: False
	size_hint: .6, .2
	pos_hint: {'x': .2, 'top': .9}

	title: 'Usuń grę'

	BoxLayout:
		orientation: 'horizontal'

		Button:
			text: 'TAK'
			font_size: 16
			on_release: root.dismiss()
		Button:
			text: "NIE"
			font_size: 16
			on_release: root.dismiss()

<MyLayout>
	do_default_tab: False
	tab_width: 150
	tab_pos: 'top_mid'

	TabbedPanelItem:
		text: 'Gry Planszowe'
		FloatLayout:			
			size: root.width, root.height

			BoxLayout:	
				size_hint: .7, 1
				pos_hint: {'x':0 , 'top': 1}

				padding: 20

				Button: 
					text: "Lista Gier"
					font_size: 32
					background_color: 1,0,0,1
					
			Button:
				text: 'Nowa Gra planszowa'
				pos_hint: {'x':.725 , 'top': .9}
				size_hint: .25, .07
				font_size: 14
				on_release: Factory.NewGame().open()

			Button:
				text: 'Edytuj Grę Planszową'
				pos_hint: {'x':.725, 'top': 0.8}
				size_hint: .25, .07
				font_size: 14
				on_release: Factory.EditGame().open()

			Button:
				text: 'Usuń Grę Planszową'
				pos_hint: {'x':.725 , 'top': 0.7}
				size_hint: .25, .07 
				font_size: 14
				on_release: Factory.DeleteGame().open()
				
	TabbedPanelItem:
		text: 'Wyniki rozgrywek'
		Accordion:
			orientation: 'vertical'

			AccordionItem:
				title: 'Dodawanie Wyników Dnia'
				Label:
					text: 'Dodawanie Wyników Dnia'
					font_size: 32

			AccordionItem:
				title: 'Tablica Wyników'
				Label:
					text: 'Tablica Wyników'
					font_size: 32

	TabbedPanelItem:
		orientation: 'vertical'
		text: 'Ustawienia'
		size: root.width, root.height

		BoxLayout:
			orientation: 'vertical'

			padding: 20

			BoxLayout:
				id: my_boxlayout
				disabled: True
				orientation: 'vertical'

				Label:
					id: my_label
					font_size: 24
					text: 'Ustawienia zablokowane'

				BoxLayout:

				BoxLayout:
					orientation: 'horizontal'
					Label:
						id: my_label2
						# =====================================================
						halign: 'left'
						# nie wiem dlaczego to nie chce działać
						# =====================================================
						font_size: 16
						text: 'Link do arkuszu statystyk:'
						size_hint: .6, 1

					TextInput:
						multiline: False
						font_size: 15
						size_hint: 1, 1

				BoxLayout:
					orientation: 'horizontal'
					Label:
						id: my_label2
						font_size: 16
						text: 'Link do arkuszu z planszówkami:'
						size_hint: .6, 1

					TextInput:
						multiline: False
						font_size: 15
						size_hint: 1, 1

				Splitter:
					sizable_from: 'bottom'
					disabled: True
					BoxLayout:

				BoxLayout:
					size_hint: 1, 0.5

				BoxLayout:
					orientation: 'horizontal'
					Label:
						id: my_label2
						font_size: 16
						text: 'Podaj nazwę arkusza z graczy:'

					TextInput:
						multiline: False
						font_size: 15
						size_hint: .5, 1

				BoxLayout:
					orientation: 'horizontal'
					Label:
						id: my_label2
						font_size: 16
						text: 'Podaj nazwę arkusza z listą gier:'

					TextInput:
						multiline: False
						font_size: 15
						size_hint: .5, 1

				BoxLayout:
					orientation: 'horizontal'
					Label:
						id: my_label2
						font_size: 16
						halign: 'left'
						text: 'Podaj nazwę arkusza z wynikami dnia:'

					TextInput:
						multiline: False
						font_size: 15
						size_hint: .5, 1

				BoxLayout:
					orientation: 'horizontal'
					Label:
						id: my_label2
						font_size: 16
						text: 'Podaj nazwę arkusza ze spisem wszystkich planszówek:'

					TextInput:
						multiline: False
						font_size: 15
						size_hint: .5, 1

				BoxLayout:
					orientation: 'horizontal'
					Label:
						id: my_label2
						font_size: 16
						text: 'Podaj nazwę arkusza z tablicami wyników:'

					TextInput:
						multiline: False
						font_size: 15
						size_hint: .5, 1


			Switch:
				id: my_switch
				active: False
				on_active: root.switch_click(self, self.active)
				


			